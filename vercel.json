{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/plan/(.*)",
      "destination": "/api/index"
    },
    {
      "source": "/api/chat",
      "destination": "/api/index"
    },
    {
      "source": "/api/vision_query",
      "destination": "/api/index"
    },
    {
      "source": "/api/speech_to_text",
      "destination": "/api/index"
    },
    {
      "source": "/api/plan",
      "destination": "/api/index"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.11"
  },
  "functions": {
    "api/index.py": {
      "maxDuration": 30
    },
    "api/stripe_webhook.py": {
      "maxDuration": 30
    },
    "api/test_api.py": {
      "maxDuration": 10
    }
  }
}

